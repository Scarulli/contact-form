{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Question</th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.name }}</td>
                        <td>{{ contact.email }}</td>
                        <td>{{ contact.question }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune question</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
